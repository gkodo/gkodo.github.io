{
	"semi": true,
	"tabWidth": 4,
	"useTabs": true,
	"printWidth": 99999,
	"singleQuote": true,
	"trailingComma": "all",
	"bracketSpacing": true,
	"arrowParens": "always",
	"endOfLine": "lf",
	"embeddedLanguageFormatting": "auto",
	"htmlWhitespaceSensitivity": "ignore",
	"jsxBracketSameLine": true,
	"overrides": [
		{
			"files": ["*.yaml", "*.yml"],
			"options": {
				"tabWidth": 2,
				"useTabs": false
			}
		}
	]
}
